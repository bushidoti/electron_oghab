		"antd": "^5.12.7",
		"antd-jalali": "^1.0.3",
		"auto-launch": "^5.0.6",
		"compressorjs": "^1.2.1",
		"electron-is-dev": "^2.0.0",
		"electron-reloader": "^1.2.3",
		"electron-updater": "^6.1.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
